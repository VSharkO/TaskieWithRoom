<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <EditText
        android:id="@+id/edittext_newtask_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/newTask_title_hint"/>

    <EditText
        android:id="@+id/edittext_newtask_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_newtask_title"
        android:hint="@string/newTask_description_hint"/>

    <Spinner
        android:id="@+id/spinner_newtask_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext_newtask_description"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/imagebutton_newtask_savetask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_newtask_newcategory"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_menu_save" />

    <ImageButton
        android:id="@+id/imagebutton_newtask_addCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/spinner_newtask_category"
        android:layout_below="@id/spinner_newtask_priority"
        android:src="@android:drawable/ic_input_add" />
    <Spinner
        android:id="@+id/spinner_newtask_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_newtask_priority"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/edittext_newtask_newcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enterCategory"
        android:visibility="invisible"
        android:layout_below="@id/spinner_newtask_priority"
        android:layout_toLeftOf="@id/imagebutton_newtask_addCategory"
        android:layout_toStartOf="@id/imagebutton_newtask_addCategory"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>